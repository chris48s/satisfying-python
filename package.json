{
  "name": "@chris48s/satisfying-python",
  "description": "Output maximum and minimum python versions satisfying constraint from pyproject.toml",
  "type": "module",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "build": "ncc build src/action.js -o dist --minify",
    "lint": "eslint \"src/**/*.js\"",
    "prettier": "prettier --write \"src/**/*.js\"",
    "prettier:check": "prettier --check \"src/**/*.js\"",
    "test": "c8 --reporter=text mocha \"src/**/*.spec.js\"",
    "coverage": "c8 report --reporter=cobertura"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/chris48s/satisfying-python.git"
  },
  "homepage": "https://github.com/chris48s/satisfying-python",
  "author": "chris48s",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "1.10.1",
    "@renovatebot/pep440": "3.0.9",
    "smol-toml": "1.1.3"
  },
  "devDependencies": {
    "@typescript-eslint/parser": "6.9.1",
    "@vercel/ncc": "0.38.1",
    "eslint": "8.53.0",
    "eslint-config-prettier": "9.0.0",
    "eslint-plugin-mocha": "10.2.0",
    "eslint-plugin-prettier": "5.0.1",
    "mocha": "10.2.0",
    "c8": "8.0.1",
    "prettier": "3.0.3"
  },
  "engines": {
    "node": ">=20"
  }
}
